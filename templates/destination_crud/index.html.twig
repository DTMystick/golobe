{% extends 'base.html.twig' %}

{% block title %}Destination index{% endblock %}

{% block body %}
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <h1>Liste des destinations</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pays</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for destination in destinations %}
            <tr>
                <td>{{ destination.id }}</td>
                <td>{{ destination.nameDestination }}</td>
                <td>{{ destination.priceDestination }}</td>
                <td>
                    <a href="{{ path('app_destination_crud_show', {'id': destination.id}) }}" class="btn btn-primary">Details</a>
                    <a href="{{ path('app_destination_crud_edit', {'id': destination.id}) }}" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_destination_crud_new') }}" class="btn btn-primary">Ajouter</a>
</div>
</div>
    <div class="col-2"></div>
    {% endblock %}
    