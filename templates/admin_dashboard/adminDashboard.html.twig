{% block body %}
<div id="dashboard">
<main id="main-content">
        <aside id="sidebar">
            <ul id="sidebar-menu">
                <li class="side-items">
                    <a href="#"><i class="fa-solid fa-gauge"></i> Dashboard</a>
                </li>
                     <li class="side-items">
                         <a href="#"><i class="fa-solid fa-user"></i> Profile</a>
                     </li>
                         <li class="side-items">
                            <a href="#"><i class="fa-solid fa-chart-line"></i> Recent Activity</a>
                        </li>
                     <li class="side-items">
                        <a href="#"><i class="fa-solid fa-square-person-confined"></i> Activity Management</a>
                    </li>
                 <li class="side-items">
                    <a href="#"><i class="fa-solid fa-plane"></i> Destination Management</a>
