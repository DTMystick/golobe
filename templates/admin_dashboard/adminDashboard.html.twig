        <section id="profile-details">
            <h2 id="profile-title">PROFILE DETAILS</h2>
            <div id="profile-info">
                <img src="assets/IMG/profile-picturel.jpg" alt="Profile Picture" id="profile-pic">
                <div id="profile-text">
                    <h3 id="profile-name"></h3>
                    <p id="profile-email"></p>
                </div>
                <button id="edit-btn"><i class="fa-solid fa-user-pen"></i>  Edit Picture</button>
            </div>
            <form id="edit-form">
            <label for="name" class="form-label">Name</label>
            <input type="text" id="name" class="form-input" placeholder="GoLobe Admin">
            
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" class="form-input" placeholder="admin@golobe.com">
                
                <button type="submit" id="edit-details-btn"><i class="fa-solid fa-pen"></i> Edit Details</button>
            </form>
        </section>
        </div>
    </main>
