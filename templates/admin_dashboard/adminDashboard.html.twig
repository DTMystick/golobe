{% extends 'base.html.twig' %}

{% block title %}AdminDashboard{% endblock %}

{% block body %}
<main id="main-content">
        <aside id="sidebar">
            <ul id="sidebar-menu">
                <li class="sidebar-item">Dashboard</li>
                <li class="sidebar-item">User App Installed</li>
                <li class="sidebar-item">Security & Confidentiality</li>
                <li class="sidebar-item">Members</li>
