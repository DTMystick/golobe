{% extends 'base.html.twig' %} {# Base layout #}

{% block title %}Edit Activity{% endblock %} {# Page title #}

{% block body %} {# Body content #}
    <div class="container"> {# Bootstrap container #}
        <h1 class="my-4">Edit Activity</h1> {# Header #}

        {{ form_start(activityForm, {'attr': {'class': 'form'}}) }} {# Start form with CSS class #}

        {% if activityForm.vars.errors|length > 0 %} {# Check for form errors #}
            <div class="alert alert-danger mt-3"> {# Display errors in alert box #}
                {{ form_errors(activityForm) }} {# Show form errors #}
            </div>
        {% endif %}

        {{ form_widget(activityForm) }} {# Render form fields #}
        <button type="submit" class="btn btn-success mt-3">Save changes</button> {# Submit button #}
        {{ form_end(activityForm) }} {# End form #}

        <a href="{{ path('app_activities') }}" class="btn btn-secondary mt-3">Back to Activities List</a> {# Back button #}
    </div>
{% endblock %}
